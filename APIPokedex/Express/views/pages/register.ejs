<%- contentFor('body') %>
    <section class="clearfix pokemon-card">
        <article class="pokemon-data" style="overflow: visible;">
            <h2>Register</h2>
            <% if (typeof message !== 'undefined') { %>
                <% if (typeof message == 'object') { %>
                    <%- JSON.stringify(message.errors.email.message) %>
                <% } else { %>
                    <%= message %>
                <% } %>
            <% } %>
            <form method="post" action="/register">
                <div class="row">
                    <div class="col-md-12 input-box">
                        <i class="material-icons">face</i>
                        <input type="text" name="name" class="form-control" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 input-box">
                        <i class="material-icons">email</i>
                        <input type="text" name="email" class="form-control" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 input-box">
                        <i class="material-icons">lock</i>
                        <input type="password" name="password" class="form-control" required>
                    </div>
                </div>
                <div class="submit-box">
                    <input type="submit" value="Register">
                </div>
            </form>
        </article>
        <article class="pokemon-thumbnail form-thumbnail" style="background: url('/images/form_background.gif');"></article>
    </section>